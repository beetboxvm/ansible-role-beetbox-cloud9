#! /bin/sh
# /etc/init.d/cloud9
#
# cloud9 webdriver init script.

### BEGIN INIT INFO
# Provides:          cloud9
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start cloud9 webdriver at boot time.
# Description:       Enable cloud9 webdriver.
### END INIT INFO

PID=/var/run/cloud9.pid
LOCK=/var/lock/cloud9.lock
USER=nobody
BIN="{{ cloud9_bin_path }}"
PROJECT_ROOT = "{{ beet_root }}"
PORT="{{ cloud9_webdriver_port }}"
DAEMONIZE_BIN="/usr/sbin/daemonize"

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting cloud9."
    $DAEMONIZE_BIN -p $PID -l $LOCK -u $USER $BIN -w $PROJECT_ROOT -p $PORT
    ;;
  stop)
    if [ -f $PID ]; then
      echo "Stopping cloud9.";
      kill -TERM $(cat $PID);
      rm -f $PID;
    else
      echo "cloud9 is not running.";
    fi
    ;;
  restart)
    echo "Restarting cloud9."
    if [ -f $PID ]; then
      kill -TERM $(cat $PID);
      rm -f $PID;
    fi
    $DAEMONIZE_BIN -p $PID -l $LOCK -u $USER $BIN
    ;;
  status)
    if [ -f $PID ]; then
      echo "cloud9 is running.";
    else
      echo "cloud9 is not running.";
      exit 3
    fi
    ;;
  *)
    echo "Usage: /etc/init.d/cloud9 {start|stop|status|restart}"
    exit 1
    ;;
esac

exit 0
